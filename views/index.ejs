<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header class="bg-dark">
      <div class="col-20">
        <h1 class="color-white"><%= title %></h1>
      </div>
    </header>
    <section>
      <div class="col-20 bg-grey">
        <form action="/despesas" method="POST">
        <legend>Incluir depesa Mensal</legend>
        <input type="text" name="mes" placeholder="MÃªs Correspondente">
        <input type="text" name="valor" placeholder="Digite o valor da depesa">
        <button type="submit">Adicionar Despesa</button>
      </form></div>
      <div class="col-20">
        <table>
          <tbody>
            <% for(var i=0; i < despesas.length; i++) { %>           
            <tr>
                
              <td><strong><%= despesas[i].mes%></strong></td>
                                         
              <td class="highlight"><%= despesas[i].valor%></td>

              <td class="actions"><a href="/remove/<%= despesas[i]._id %>" class="color-red">Remover</a> </td>
            </tr>
          <% } %>
          </tbody>
        </table>
      </div>
    </section>

  </body>
</html>
